<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/row0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/cell00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/colorFon"
            android:gravity="end"
            android:text="@string/tcell00"
            android:textSize="70dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row0"
        android:weightSum="9"
        >


        <Button
            android:id="@+id/key7"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/colorKey"
            android:gravity="center"
            android:text="@string/key7"
            android:textSize="40dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/key8"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/colorKey"
            android:gravity="center"
            android:text="@string/key8"
            android:textSize="40dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/key9"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/colorKey"
            android:gravity="center"
            android:text="@string/key9"
            android:textSize="40dp"
            android:onClick="onClick"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row1"
        android:weightSum="9"
        >


        <Button
            android:id="@+id/key4"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/colorKey"
            android:gravity="center"
            android:text="@string/key4"
            android:textSize="40dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/key5"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/colorKey"
            android:gravity="center"
            android:text="@string/key5"
            android:textSize="40dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/key6"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/colorKey"
            android:gravity="center"
            android:text="@string/key6"
            android:textSize="40dp"
            android:onClick="onClick"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row2"
        android:weightSum="9"
        >

        <Button
            android:id="@+id/key1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/colorKey"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/key1"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/key2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/colorKey"
            android:gravity="center"
            android:text="@string/key2"
            android:textSize="40dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/key3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/colorKey"
            android:gravity="center"
            android:text="@string/key3"
            android:textSize="40dp"
            android:onClick="onClick"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row3"
        android:weightSum="40"
        >

        <Button
            android:id="@+id/key0"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="33"
            android:background="@color/colorKey"
            android:gravity="center"
            android:text="@string/key0"
            android:textSize="40dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/keyPoint"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="7"
            android:background="@color/colorKey"
            android:gravity="center"
            android:text="@string/keyPoint"
            android:textSize="40dp"
            android:onClick="onClick"
            />

    </LinearLayout>

</LinearLayout>


